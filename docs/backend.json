
{
    "entities": {
        "User": {
            "title": "User",
            "description": "A user of the application",
            "type": "object",
            "properties": {
                "uid": {
                    "type": "string",
                    "description": "The user's unique ID"
                },
                "email": {
                    "type": "string",
                    "description": "The user's email address"
                },
                "displayName": {
                    "type": "string",
                    "description": "The user's display name"
                },
                "role": {
                    "type": "string",
                    "description": "The user's role",
                    "enum": ["admin", "partner", "customer"]
                }
            },
            "required": ["uid", "email", "role"]
        },
        "Partner": {
            "title": "Partner",
            "description": "A dropshipping partner",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                },
                "bankName": {
                    "type": "string"
                },
                "accountHolderName": {
                    "type": "string"
                },
                "accountNumber": {
                    "type": "string"
                },
                "ifscCode": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": ["Active", "Inactive"]
                }
            },
            "required": ["id", "name", "email", "status"]
        },
        "Order": {
            "title": "Order",
            "description": "An order placed by a partner",
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "partnerId": { "type": "string" },
                "customerName": { "type": "string" },
                "customerPhone": { "type": "string" },
                "shippingAddress": { "type": "string" },
                "productSku": { "type": "string" },
                "quantity": { "type": "number" },
                "paymentMethod": { "type": "string" },
                "status": { "type": "string", "enum": ["Pending", "Accepted", "Rejected", "Shipped", "Delivered", "Cancelled"] },
                "trackingId": { "type": "string" },
                "amount": { "type": "number" },
                "orderDate": { "type": "string", "format": "date-time" }
            },
            "required": ["id", "partnerId", "customerName", "customerPhone", "shippingAddress", "productSku", "quantity", "paymentMethod", "status", "amount", "orderDate"]
        },
        "Product": {
          "title": "Product",
          "description": "A product in the store",
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "slug": { "type": "string" },
            "name": { "type": "string" },
            "brand": { "type": "string" },
            "category": { "type": "string" },
            "subcategory": { "type": "string" },
            "price": { 
                "type": "object",
                "properties": {
                    "original": { "type": "number" },
                    "discounted": { "type": "number" },
                    "currency": { "type": "string" }
                }
             },
            "quantity": { "type": "number" },
            "image": { "type": "string" },
            "description": { "type": "string" },
            "shortDescription": { "type": "string" },
            "ratings": {
                "type": "object",
                "properties": {
                    "average": { "type": "number" },
                    "count": { "type": "number" }
                }
            },
            "sku": { "type": "string" }
          },
          "required": ["id", "name", "price", "image"]
        },
        "RechargeRequest": {
            "title": "Recharge Request",
            "description": "A request to recharge a user's wallet",
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "userId": { "type": "string" },
                "amount": { "type": "number" },
                "screenshotUrl": { "type": "string" },
                "status": { "type": "string", "enum": ["Pending", "Approved", "Rejected"] },
                "requestDate": { "type": "string", "format": "date-time" }
            },
            "required": ["userId", "amount", "screenshotUrl", "status", "requestDate"]
        }
    },
    "auth": {
        "providers": ["email"]
    },
    "firestore": {
        "/users/{userId}": {
            "schema": { "$ref": "#/entities/User" },
            "description": "Stores public profile information for users."
        },
        "/partners/{partnerId}": {
            "schema": { "$ref": "#/entities/Partner" },
            "description": "Stores information about dropshipping partners."
        },
        "/orders/{orderId}": {
            "schema": { "$ref": "#/entities/Order" },
            "description": "Stores all orders from all partners."
        },
        "/products/{productId}": {
            "schema": { "$ref": "#/entities/Product" },
            "description": "Stores all available products."
        },
        "/rechargeRequests/{requestId}": {
            "schema": { "$ref": "#/entities/RechargeRequest" },
            "description": "Stores wallet recharge requests from users."
        }
    }
}
